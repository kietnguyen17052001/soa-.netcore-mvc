@model List<Category>;
@{
    ViewData["Title"] = "Create product page";
    var categories = Model;
}
<h1>Create product</h1>
<form action="/Product/Save" method="post">
    <div class="form-group">
        <label for="exampleInputName">Product name</label>
        <input type="text" class="form-control" id="product_name" aria-describedby="nameHelp" name="productName"
            placeholder="Enter product name">
    </div>
    <div class="form-group">
        <label for="exampleInputPrice">Price</label>
        <input type="text" class="form-control" id="price" aria-describedby="prictHelp" name="price"
            placeholder="Enter price">
    </div>
    <div class="form-group">
        <label for="exampleInputQuantity">Quantity</label>
        <input type="text" class="form-control" id="quantity" aria-describedby="quantityHelp" name="quantity"
            placeholder="Enter quantity">
    </div>
    <div class="form-group">
        <label for="exampleInputSlug">Slug</label>
        <input type="text" class="form-control" id="slug" aria-describedby="slugHelp" name="slug"
            placeholder="Enter slug">
    </div>
    <div class="form-group">
        <label for="inputState">Category</label>
        <select id="inputState" class="form-control" name="categoryId">
            <option selected>Choose...</option>
            @foreach (var category in categories)
            {
                <option value="@category.categoryId">@category.categoryId - @category.categoryName</option>
            }
        </select>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>